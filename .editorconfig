# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile,makefile]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79
quote_type = double

[*.{html,css,js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 80